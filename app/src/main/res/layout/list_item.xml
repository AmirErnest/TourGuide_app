<?xml version="1.0" encoding="utf-8"?><!-- list_item.xml to make our list accept more texts or images in each list item view
instead of only one text as we use the default simple_list_item_1.xml-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:minHeight="@dimen/list_item_height"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/list_item_height"
        android:layout_height="@dimen/list_item_height"
        android:background="@color/white" />

    <LinearLayout
        android:id="@+id/text_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/default_text_view"
            style="@style/textView"
            android:layout_width="match_parent"
            android:gravity="bottom"
            tools:text="default_tour_guide" />


        <TextView
            android:id="@+id/english_text_view"
            style="@style/textView"
            android:layout_width="match_parent"
            android:gravity="top"
            tools:text="english_tour_guide" />

    </LinearLayout>
</LinearLayout>